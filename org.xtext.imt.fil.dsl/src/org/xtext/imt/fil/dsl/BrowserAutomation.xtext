grammar org.xtext.imt.fil.dsl.BrowserAutomation with org.eclipse.xtext.common.Terminals

generate browserAutomation "http://www.xtext.org/imt/fil/dsl/BrowserAutomation"

BrowserAutomation:
	{BrowserAutomation}
	'open' webBrowser=WebBrowser
	(statements+= Statement)*
;

WebBrowser:
	'mozilla' | 'chrome' | 'safari' | 'internetExplorer'
;

Statement:
	DoAction | Get | UncheckAll | GoTo
;

DoAction:
	(get=Get)
	(action=Action)
;

Action:
	Click | Insert | Verify | Check | Choose | Contains
;

GoTo:
	'go' 'to' url=STRING
;

UncheckAll:
	'uncheck' 'all'
;

Get:
	var=Variable '=' 'get' (element=Element (order=Order)? ('by' attr=Attribut '[' (attrVal=STRING | attrVar=VarReference) ']' | 'from' varRef=VarReference) | 'pageTitle')
;

Order:
	'number' order=INT
;
 
Element:
	'link' | 'input' | 'button' | 'checkbox' | 'combobox' | 'image' | 'text' | 'title'
;

Attribut:
	'class' | 'value' | 'alt' | 'name' | 'href'
;

Variable:
	name=ID
;

VarReference:
	var=[Variable]
;

Click:
	'click' 'on' var=VarReference
;

Insert:
	'insert' (val=STRING | varRef=VarReference) 'in' var2=VarReference
;

Verify:
	var=VarReference 'is' 'not' 'null'
;

Check:
	'check' var=VarReference
;

Choose:
	'choose' value=STRING 'in' var=VarReference
;

Contains:
	var=VarReference 'contains' var2=VarReference
;